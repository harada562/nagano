<%= render 'layouts/amin_header' %>
<h1>注文履歴</h1>

<table>
	<tr>
		<th>注文日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>
	<tr>
		<% @orders.each do |i|%>
			<td><%= link_to i.created_at.to_s(:datetime_jp),  admin_order_path(i.id)%></td>
			<td><%= i.customer.first_name %><%= i.customer.last_name%></td>
			<td><%= i.status %></td>
	</tr>
		<% end %>
</table>