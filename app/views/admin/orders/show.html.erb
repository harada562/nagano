<%= render 'layouts/amin_header' %>
<h1>注文履歴詳細</h1>

<table>
	<tr>
		<th>購入者</th>
		<td><%= @order.name%></td>
	</tr>
	<tr>
		<th>配送先</th>
		<td>
			<%= @order.postal_code%><br>
			<%= @order.address%><br>
			<%= @order.name%>
		</td>
	</tr>
	<tr>
		<th>支払い方法</th>
		<td><%= @order.payment_method%></td>
	</tr>
	<tr>
		<th>注文ステータス</th>
		<td><%= form_for(@order, url:admin_order_path(@order.id)) do |f| %>
			<%= f.select :status, [['入金待ち', '販売停止中'], ['入金確認', '入金確認'], ['制作中', '制作中'], ['発送準備中', '発送準備中'], ['発送済み', '発送済み']]%><%= f.submit '更新'%>
		<% end %>
		</td>
	</tr>
</table>
<table>
	<tr>
		<th>商品名</th>
		<th>単価</th>
		<th>数量</th>
		<th>小計</th>
		<th>制作ステータス</th>
	</tr>
	<tr>
		<td></td>
	</tr>
</table>