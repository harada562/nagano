<%= render 'layouts/amin_header' %>
<h1>商品一覧</h1>

<table>
	<tr>
		<th>商品名id</th>
		<th>商品名</th>
		<th>税抜き価格</th>
		<th>ジャンル</th>
		<th>ステータス</th>
	</tr>
	<tr>
		<% @items.each do |i|%>
			<td><%= i.id %></td>
			<td><%= link_to i.name, admin_item_path(i.id) %></td>
			<td><%= i.price %></td>
			<td><%= i.genre.name %></td>
			<td><%= i.is_active %></td>
	</tr>
		<% end %>
</table>