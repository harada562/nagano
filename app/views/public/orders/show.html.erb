<%= render 'layouts/customer_header' %>
<h1>注文履歴詳細</h1>
<table>
	<h2>注文情報</h2>
	<tr>
		<th>注文日</th>
		<td><%= @order.created_at%></td>
	</tr>
	<tr>
		<th>配送先</th>
		<td><%= @order.postal_code%> <br> <%=@order.address%> <br><%=@order.name%></td>
	</tr>
	<tr>
		<th>支払方法</th>
		<td><%= @order.payment_method%></td>
	</tr>
	<tr>
		<th>ステータス</th>
		<td><%= @order.status%></td>
	</tr>
</table>

<table>
	<h2>請求情報</h2>
	<tr>
		<th>商品合計</th>
		<td><%= @order.total_payment%>円</td>
	</tr>
	<tr>
		<th>配送料</th>
		<td><%= @order.shipping_cost%>円</td>
	</tr>
	<tr>
		<th>ご請求額</th>
		<td><%= @order.shipping_cost + @order.total_payment%>円</td>
	</tr>
</table>

<table>
	<h2>注文内容</h2>
	<tr>
		<th>商品</th>
		<th>単価</th>
		<th>個数</th>
		<th>小計</th>
	</tr>
	<tr>
		
	</tr>
</table>