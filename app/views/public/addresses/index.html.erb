<%= render 'layouts/customer_header' %>
<h1>配送先登録/一覧</h1>
<%= form_for(@newaddresse, url:public_addresses_path, method: :post) do |f|%>
<div>
	<%= f.hidden_field :customer_id, :value => current_customer.id %>
	<h2>郵便番号</h2>
	<%= f.text_field :postal_code %>

	<h2>住所</h2>
	<%= f.text_field :address %>

	<h2>宛名</h2>
	<%= f.text_field :name %>
</div>
<div>
	<%= f.submit '配送先追加' %>
</div>
<% end %>
<table>
	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
	</tr>
	<% @addresse.each do |a| %>
		<tr>
			<td><%=a.postal_code %></td>
			<td><%=a.address %></td>
			<td><%=a.name %></td>
			<td><%= link_to '編集', edit_public_address_path(a.id) %></td>
		</tr>
	<% end %>
</table>

