<%= render 'layouts/customer_header' %>
<h1><%= @customer.first_name%><%= @customer.last_name%>さんの会員情報編集</h1>
<%= form_for(@customer, url: public_customer_path) do |f| %>

	 <div class="field">
    <%= f.label :名前 %>
    <%= f.label :'(姓)' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "姓" %>
    <%= f.label :'(名)' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.label :'(セイ)' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "姓" %>
    <%= f.label :'(メイ)' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :'郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

   <div class="field">
    <%= f.label :'住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :'電話番号（ハイフンなし）' %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>


<% end %>
<%= link_to '退会', public_customer_comfirm_path(@customer)%>