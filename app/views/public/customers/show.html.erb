090<%= render 'layouts/customer_header' %>
<h1>マイページ</h1>
<table>
	<tr>
		<th>氏名</th>
		<td><%= @customer.first_name%><%= @customer.last_name%></td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= @customer.postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @customer.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= @customer.telephone_number %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @customer.email %></td>
	</tr>
</table>
<%= link_to '編集する', edit_public_customer_path(current_customer) %>